generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  email        String
  passwordHash String

  File File[]

  @@map("users")
}

model File {
  id          String   @id @default(cuid())
  name        String
  contentType String
  size        Int
  createdAt   DateTime @default(now())

  User   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("files")
}
